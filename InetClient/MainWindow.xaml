<Window x:Class="InetClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InetClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="550px" Width="400px"
        KeyDown="Window_KeyDown">

    <StackPanel Name="MainPanel">
        <UniformGrid Name="GamePanel" Height="400" Background="#323232">
            
        </UniformGrid>

        <StackPanel Name="InventoryPanel" Height="40" Orientation="Horizontal">
            <TextBlock FontSize="16">Equipment:</TextBlock>
            <Border BorderThickness="2" BorderBrush="LightGreen" Margin="20, 0, 0, 0">
                <Image Name="Equipment" Source=".\images\Empty.png" ></Image>
            </Border>
        </StackPanel>

        <StackPanel Name="MessagesPanel" Height="70">
            <TextBlock Name="ConnectionInfoText" Margin="5" FontSize="15">Client starting...</TextBlock>
            <TextBlock Name="GameInfoText" Margin="5" FontSize="15">Welcome!</TextBlock>
        </StackPanel>

    </StackPanel>



</Window>
